<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vlev.ceuch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="vlev.ceuch.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="vlev.ceuch.LoginActivity"
            android:label="@string/title_activity_login"
            android:noHistory="true"
            android:theme="@style/FullLogin"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="vlev.ceuch.Compromisos"
            android:label="@string/title_activity_compromisos" >
        </activity>
        <activity
            android:name="vlev.ceuch.CompromisosActivity"
            android:label="@string/title_activity_compromisos" >
        </activity>
        <activity
            android:name="vlev.ceuch.CompromisosNuevo"
            android:label="@string/title_activity_compromisos_nuevo" >
        </activity>
    </application>

</manifest>
